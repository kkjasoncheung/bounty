<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Product name</th>
      <th>Store name</th>
      <th>Description</th>
      <th>Est price</th>
      <th>Delivery location</th>
      <th>To</th>
      <th>From</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.product_name %></td>
        <td><%= request.store_name %></td>
        <td><%= request.description %></td>
        <td><%= request.est_price %></td>
        <td><%= request.delivery_location %></td>
        <% %>
        <td><%= returnUser(request.to_id) %></td>
        <td><%= returnUser(request.user_id) %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


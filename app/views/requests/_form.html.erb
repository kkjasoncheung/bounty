<%= form_for(request) do |f| %>
  <% if request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :product_name %>
    <%= f.text_field :product_name %>
  </div>

  <div class="field">
    <%= f.label :store_name %>
    <%= f.text_field :store_name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :est_price, 'Est. Price ($)' %>
    <%= f.text_field :est_price %>
  </div>

  <div class="field">
    <%= f.label :delivery_location %>
    <%= f.text_field :delivery_location, :value=>User.find(session[:user_id]).residence %>
  </div>

  <div class="field">
    <% f.label :forum_id %>
    <%= f.text_field :forum_id, :value=>params[:id], :class=>'opacity_none' %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Request', :class=>'btn' %>
  </div>
<% end %>
